---
import EntregarTarea from "../../../../components/EntregarTarea.astro";
const tareaInfo = [
  {
    name: "Math Task 1",
    createdBy: "John Doe",
    description: "Solve the following algebraic equation",
    dueDate: "2022-10-15",
    dueHour: "14:00",
    createdAt: "2022-10-10",
    updatedAt: "2022-10-12",
  },
];
const { tarea } = Astro.params;
---

buen chico, {tarea}!
<body>
  <header>{tarea}</header>
  {
    tareaInfo.map((e) => {
      return (
        <>
          <main>
            <h1>{e.name}</h1>
            <span>
              {e.createdBy} Â· {e.createdAt}(
              {e.createdAt === e.updatedAt ? "" : e.updatedAt})
            </span>
            <span>
              {e.dueDate}
              {e.dueHour}
            </span>
            <hr />
            <p>{e.description}</p>
          </main>
          <aside>
            <EntregarTarea />
          </aside>
        </>
      );
    })
  }
</body>
